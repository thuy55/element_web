#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/bun" ]; then
  "$basedir/bun"  "$basedir/../knip/bin/knip-bun.js" "$@"
  ret=$?
else 
  bun  "$basedir/../knip/bin/knip-bun.js" "$@"
  ret=$?
fi
exit $ret
